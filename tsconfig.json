{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./",
    "rootDir": "./src/",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@types-internal/*": ["types/*"],
      "@enums/*": ["enums/*"],
      "@models/*": ["models/*"],
      "@helpers/*": ["helpers/*"],
      "@middlewares/*": ["middlewares/*"],
    }
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],

}